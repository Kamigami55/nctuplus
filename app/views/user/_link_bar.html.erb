<style>
	#link-bar{
		font-size:16px;
		padding-top:10px;
		padding-bottom:10px;
		margin-bottom:20px;
		margin-top:20px;
	}
	.link-with-border{
		padding-right:10px;
		padding-bottom:10px;
		padding-left:10px;
	}
	#link-bar > a{
		color:#333333;
	}
	#link-bar > .active{
		border-bottom:3px solid #00A6FF;
		font-weight: bold;
	}
	
</style>

<div class="row no-margin-left no-margin-right">
	<div id="link-bar" class="col-md-12 bg-white " style="">
		<a class="link-with-border" href="/user<%=params[:uid].blank? ? "" : "?uid=#{params[:uid]}"%>"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> 個人檔案</a>
		<a class="link-with-border" href="/user/courses<%=params[:uid].blank? ? "" : "?uid=#{params[:uid]}"%>"><span class="glyphicon glyphicon-time" aria-hidden="true"></span> 歷年課程</a>
		<a class="link-with-border" href="/user/collections<%=params[:uid].blank? ? "" : "?uid=#{params[:uid]}"%>"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span> 收藏課表</a>
		<a class="link-with-border" href="/user/calendar<%=params[:uid].blank? ? "" : "?uid=#{params[:uid]}"%>"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> 行事曆</a>
	</div>
</div>

<script>
	$(function(){
		//console.log(window.location);
		$("#link-bar").find("a[href='"+window.location.pathname+window.location.search+"']").addClass("active");	
		//add bottom blue border
	});
</script>
